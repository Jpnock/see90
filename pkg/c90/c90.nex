package c90

var (
    column = 0
)

func count(yylex *Lexer) {
	for _, c := range yylex.Text() {
		if (c == '\n') {
			column = 0;
        } else if (c == '\t') {
			column += 8 - (column % 8);
        } else {
			column += 1;
        }
    }
